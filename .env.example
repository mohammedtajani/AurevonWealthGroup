# Database Configuration
# PostgreSQL connection string format: postgresql://USERNAME:PASSWORD@HOST:PORT/DATABASE_NAME
# For local development: postgresql://postgres:YOUR_PASSWORD@localhost:5432/aurevonwealthgroup
# For production: Use the connection string provided by your hosting service (Vercel, Railway, Render, etc.)
DATABASE_URL="postgresql://postgres:your_password_here@localhost:5432/aurevonwealthgroup"

# NextAuth Configuration
# Generate a random secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secret-nextauth-key-change-this-in-prod"

# NextAuth URL (development)
NEXTAUTH_URL="http://localhost:3000"

# NextAuth URL (production - update with your domain)
# NEXTAUTH_URL="https://yourdomain.com"

# Trust host for NextAuth
AUTH_TRUST_HOST=true

# Firebase Configuration (if using Firebase)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Email Configuration (Optional - for production)
# EMAIL_SERVER_USER=your_email@example.com
# EMAIL_SERVER_PASSWORD=your_email_password
# EMAIL_SERVER_HOST=smtp.example.com
# EMAIL_SERVER_PORT=587
# EMAIL_FROM=noreply@yourdomain.com

# AWS S3 Configuration (Optional - for file uploads)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name
